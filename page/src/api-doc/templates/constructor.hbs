<table class="table table-hover table-bordered table-sm">
	<thead class="thead-dark">
		<tr>
			<th scope="col" style="white-space:nowrap;">Constructor</th>
			<th scope="col" style="white-space:nowrap;">Description</th>
		</tr>
	</thead>
	<tbody>
		{{#each documentables}}
			<tr id="{{id}}">
				<td style="min-width:200px;">
					<code>new <b>{{name}}</b>({{#each params}} <span style="white-space:nowrap;">{{#if type}}&lt;{{{type type}}}&gt;{{/if}} <i>{{name}}</i>{{~#unless @last}},{{/unless}}</span>{{~#unless @last}} {{/unless}}{{/each}})</code>
				</td>
				<td>
					{{{markdown comments}}}
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>